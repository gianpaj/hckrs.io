@import "nib"


/* HACKER */

.main-alerts .alert-success {
  background-color: rgba(0,255,0,0.1) !important;
}

#hacker {
  position: relative;

  .required {
    border: 1px solid orange;
  }

  .mode {
    position: absolute;
    top: 79px;
    left: 910px;
    z-index:2;
    .icon {
      margin-right: 3px;
      margin-bottom: 2px;
      vertical-align: middle;
    }
  }

  @media screen and (max-width: 1114px) {
    .mode {
      position: relative;
      top: 85px;
      left: auto;
      float: right;
    }
  }

  .name-field{
    padding-top: 76px;
  }

  #inputName{
    height:50px;
    font-size:36px;
    font-weight:700;
    border-radius: 24px;
    padding: 7px 0px 0px 18px !important;
    width:350px;
    line-height:36px;
    margin-left:-18px;
  }

  #register-city-move {
    #citySelect {
      display: inline-block;
    }
  }

  .help-inline{
    color: orange;
    font-weight: normal;
    display: block;
  }

  #mapWrapper.edit {
    position: relative;
    width: 200px;
    height: 200px;
    
    .map {
      position: relative;
      z-index: 10;
      width: inherit;
      height: inherit;
      transition: opacity 0.1s ease-in;

      .leaflet-popup-content {
        margin: 2px 4px !important;
      }
    }

    /* overlay that catches the click event */
    .event-catch-overlay { 
      position: absolute;
      z-index: 11;
      width: inherit;
      height: inherit;

      &:hover { /* hovering map */
        cursor: pointer;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);  
      }
    }
    
    .close-map { /* close fullscreen button */
      display: none;
      position: fixed;
      top: 30px;
      right: 30px;
      z-index: 111;
      cursor: pointer;
    }
    
    &.active { /* map in fullscreen mode */
      .map {
        z-index: 110;
        cursor: crosshair;

        /* effect before closing fullscreen */
        -webkit-transition: -webkit-filter 0.3s ease-in;
        -moz-transition: -moz-filter 0.3s ease-in;
        -o-transition: -o-filter 0.3s ease-in;
        -ms-transition: -ms-filter 0.3s ease-in;
        &.before-close-effect {
          -webkit-filter: brightness(2);
          -moz-filter: brightness(2);
          -o-filter: brightness(2);
          -ms-filter: brightness(2);
          filter: brightness(2);
        }
      }
    }

  }

  #mapWrapper.view {
    width: 700px;
    height: 300px;
    margin-top: 10px;
    margin-bottom: 18px;
    .map {
      width: inherit;
      height: inherit;
    }
  }
  
  
  #profilePicture {
    position: relative;
    .picture {
      width: 180px;
      height: 180px;
      border-radius: 90px;
      background-position: center; 
      background-size: cover;
      background-color: #CCC;
    }
    div.current-picture {
      position: relative;
      width: 180px;
      height: 180px;
      .change {
        display: none;
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: 2;
        width: 100%;
        text-align: center;
        color: white;
        margin-top: 60px;
      }
      &.change-allowed:hover {
        cursor: pointer;
        .change {
          display: block;
        }
        .picture {
          -webkit-filter: blur(2px) brightness(0.7);
          -moz-filter: blur(2px) brightness(0.7);
          -o-filter: blur(2px) brightness(0.7);
          -ms-filter: blur(2px) brightness(0.7);
          filter: blur(2px) brightness(0.7);
        }
      }
    }
    div.picture-choser {
      display: none;
      position: absolute;
      top: -20px;
      left: -20px;
      z-index: 3;
      border-radius: 10px;
      padding: 10px 10px 5px 10px;
      background-color: rgba(0,0,0,0.85);
      white-space:nowrap;
      .choice-wrapper {
        margin: 10px;
        display: inline-block;
      }
      label {
        padding: 0px;
        text-align: center;
        color: #CCC;
      }
      .label-text {
        margin-top: 8px;
        color: white;
      }
    }
    div.picture-choser.show {
      display: block;
    }
  }

  .edit-social {
    .disabled {
      opacity: 0.6;
      margin-right: 10px;
    }
    .icon {
      position: relative;
      top: 2px;
    }
    .icon-plus {
      margin-left: 9px;
    }
    .icon-remove {
      top: 3px;
      display: none;
    }
    &:hover {
      .icon-remove {
        display: inline-block;
        opacity: 0.4;
      }
      .icon-remove:hover {
        display: inline-block;
        opacity: 1;
      }
    }
  }

  A.profile-social-active{
    padding: 7px 12px 8px 4px;
    background-color: rgba(92,128,5,0.8);
    border: 0px;
    margin: 0px;
    line-height:24px;
    color:#384422;
    font-weight:700;
    border:1px solid #85a352;
    margin-right: 6px;
 }
  A.profile-social-active:hover{
    color:#FFF;
    background-color: rgba(202,82,35,0.8);
    border:1px solid #d67b59;
  }
  IMG.profile-social-active-icon{
    height:24px;
    vertical-align:middle;
  }

  A.profile-social-inactive{
    padding: 7px 12px 8px 12px;
    background-color: rgba(202,82,35,0.8);
    border: 0px;
    margin: 0px;
    line-height:24px;
    color:#dadada;
    font-weight:700;
    border:1px solid #d67b59;
    margin-right: 6px;
  }
  A.profile-social-inactive:hover{
    color:#FFF;
    background-color: rgba(92,128,5,0.8);
    border:1px solid #85a352;
  }
  IMG.profile-social-inactive-icon{
    height:10px;
    vertical-align:middle;
    padding-right: 6px;
  }

  .profile-ready {
    margin-top: 40px;
    font-size: 18px;
    .button-ready {
      position: relative;
    }
  }

  .control-label{
    font-weight: 700;
    color: white;
  }

  DIV.controls{
    line-height: 30px;
    color: #e2e2e2;
    > a{
      border-bottom: 3px solid #ffea87;
      padding-bottom: 3px;
    }
    .description {
      color:#E2E2E2;
      font-style: italic;
      font-weight: normal;
    }
                .description.hover { opacity: 0; }
    &:hover     .description.hover { opacity: 1; }
    @media screen and (min-width: 480px) {
      label .description.hover {
        opacity: 0 !important; 
      }
    }
    label:hover .description.hover { opacity: 1 !important; }

    label{
      font-weight: bold;
      line-height: 20px;
      input[type=text]{
        margin-top: 6px;
      }
    }

    label > .details{
      display: block;
    }

    .details{
      padding-top: 6px;
      input{
        margin-left: 9px;
      }
    }
  }

  .skillset-input {
    margin-top: 4px;
  }
  

  /* VIEW hacker */
    
  #hackerView {

    label {
      cursor: default;
    }

    .form-group {
      margin-bottom: 0px;
    }

    .spacer {
      margin-bottom: 13px;
    }

    .headline {
      color: white;
      margin-top: 60px;
    }

    .name{
      font-size: 36px;
      font-weight: 700;
      color:white;
      float:left;
      margin-left: 5px;
    }

    .hacking-container{
      float:left;
      clear:left;
      margin-bottom: 12px;
      margin-top: 20px;
    }

    .hacking-tag{
      float:left;
      background-color: rgba(0,0,0,0.45);
      border-radius: 3px;
      padding: 1px 11px 0px 10px;
      margin: 0px 6px 6px 0px;
    }

    .hacker-number{
      line-height: 34px;
      font-size: 14px;
      float: left;
      margin-left: 5px;
      padding-top: 20px;
      text-shadow: 1px 1px 1px rgba(0,0,0,0.1)
    }

    .skillset {
      margin-bottom: 4px;
    }
  }


  .btn-opacity{
    opacity: 0.8 !important;
    margin-bottom: 6px !important;
  }

  .btn-opacity:hover{
    opacity: 1.0 !important;
  }

  .fb-follow {
    position: relative;
    top: -3px;
  }
  .twitter-follow-button {
    position: relative;
    top: 4px;
  }
  .github-follow {
    position: relative;
    top: 5px;
  }
  .toggle{
    border-bottom: 0px !important;
  }


}


/* Responsive design */

/* Smartphones (portrait and landscape) ----------- */
@media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
  #hacker{
    .mode{
      top: 18px;
      right: 18px;
      position: absolute !important;
    }
    .name-field{
      padding-top: 12px !important;
    }
    .description.hover{
      opacity: 0.5 !important;
    }
    .picture-container{
      padding-top: 0px !important; 
    }
    label.checkbox.inline{
      float: none !important;
      margin-right: 0px;
    }
    #hackerView{
      .picture-container{
        padding: 0px !important;
        margin: 0px !important;
      }
      .headline-container{
        padding-left: 0px !important;
        margin-left: 0px !important;
        .headline{
          margin-top: 12px;
          .name{
            line-height: 1.2em;
            margin-left: 0px;
          }
          .hacker-number{
            margin-left: 0px;
            padding-top: 0px;
          }
        }
      }
      .mobile-extraSpace{
        margin-top: 18px;
      }
      #mapWrapper.view{
        width: 100%;
      }
    }
  }
}
