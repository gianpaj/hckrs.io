@import "nib"

#hackers {
  .pictureView.route-transition {
    transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    transform: scale(0);
    &.activated {
    	transform: scale(1);
   	}
    &:hover {
      transition-delay: 0s !important;
    	transform: scale(1.15);
   	}
  }

  .total {
    margin-top: 7px;
    text-align: center;
  }

  #hackersFilter {
    width: 600px;
    margin: 0 auto;

    .chosen-select {
      width: 100%;
    }
  }

}


.chosen-container {
  .chosen-drop, .chosen-results {
    max-height: 400px;
  }
  .group-option {
    display: inline-block;
    padding: 5px 8px;
  }
  .group-option:hover {
    font-weight: normal;
  }
}

/* style all chosen fields at once */
.chosen-container {
  .group-result { /* optgroup */
    margin: 18px 0px 10px 10px;
    color: #777;
    clear: both;
    width: 100%;
  }
}

.chosen-container .chosen-results li{
  float: left;
  font-weight: normal !important;
  .highlighted{
    padding: 0px;
    margin: 0px;
  }
}

.chosen-container-multi .chosen-choices{
  li.search-field input[type="text"]{
    color: #e7e7e7;
  }

  li.search-choice {
    position: relative;
    margin: 3px 0 3px 5px;
    padding: 6px 23px 7px 10px;
    border: 1px solid #FFF;
    border-radius: 0px;
    background-color: none !important;
    background: none;
    color: #222;
    background-color: rgba(255,255,255,0.3);
    line-height: 13px;
    cursor: default;
    opacity: 0.9;
    .search-choice-close{
      top: 8px;
    }

    .search-choice-close {
      background: url('/img/chosen-sprite.png') -42px -10px no-repeat;

    }
  }
}


/* HACKER */

.picture {
  max-width: 200px;
}

.hacker{
  float:left;
  width: 260px;
  overflow: hidden;
  margin-bottom: 28px;
  text-align: center;
}


/* HACKERS LIST */


.pictureView {
  position: relative;
  width: 180px;
  height: 180px;
  border-radius: 90px;
  background-position: center; 
  background-size: cover;
  color: white;
  margin: auto;
  background-color: rgba(255,255,255,0.1);
  text-align: center;

  &.small { /* element has also class 'small' */
    width: 64px;
    height: 64px;
    border-radius: 32px;
  }

  &.mini { /* element has also class 'xsmall' */
    width: 32px;
    height: 32px;
    border-radius: 16px;
  }  

  &[label="no access"] {
    opacity: 0.3;
    &:before {
      background-color: red;
    }
  }
  &[label]:not([label=""]):before {
    content: attr(label);
  }
  &:before {
    color: #fff; 
    font-weight: bold;
    cursor: default;
    background-color: rgba(0,0,0,0.5);
    font-size: 12px;
    line-height: 320px;
    border-radius: 1px;
    padding: 0px 5px;
    max-width: 135px;
    white-space: nowrap;
  }
  &.small:before {
    font-size: 11px;
    line-height: 100px; 
  }

  &.clickable:hover {
    cursor: pointer;
  }
  &.clickable.mini:hover {
  }
  
}


.hackers-name{
  font-weight: 400;
  color: #FFF;
  font-size: 130%;
  line-height: 48px;
  white-space: nowrap;
}


/* foreign users will be disabled from clicking */  

a.pictureViewLink[foreign] {
  cursor: default !important;
  color: white !important;
}
.pictureView[foreign] {
  transition: none !important;
  transform: none !important;
  cursor: default !important;
}



