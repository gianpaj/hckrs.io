@import "nib"
@import "../../general.import"

/* Deals */

#deals{

  .area{
    padding-top: 24px;
  }
  .deal {
    &:hover{
      background-color: rgba(0,0,0,0.2);
    }
    &[selected]{
      glow();
    }
    .highlighted:first-child{
      margin-right: 12px;
      font-size: 24.5px;
      background-color: rgba(0,0,0,0.3);
      color: white;
    }
    h3{
      float: left;
      margin: 0px;
      padding: 0px;
      line-height: 1.5em;
      margin-bottom: 12px;
    }
    .description{
      clear: left;
      margin-bottom: 12px;
    }
    .code{
      margin-top: 12px;
    }
    .drag-handle {
      position: relative;
      top: -20px;
      width: 50px;
      height: 10px;
      margin: 0 auto;
      background-color: rgba(0,0,0,0.2);
      cursor: move;
    }
  }
}

