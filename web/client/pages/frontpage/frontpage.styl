@import "nib"
@import "../../general.import"

text-shadow()
  text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.4);

button()
  border: 1px solid white;
  border-radius: 2px;
  padding: 5px;
  text-align: center;
  text-shadow()


button-active()
  background-color: rgba(255, 255, 255, 0.2);

centered()
  /*
    Align in center, both vertical and horizontal.
    Apply only if the height of the element is less than window height.
    Furthermore the parent must be postioned absolute|fixed|relative.
  */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);

frontpage-blur-background()
  background-color: #396e8a;
  background-image: url(/img/backgrounds/frontpage-intro-blur.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0 1px;
  background-attachment: fixed;

exit-button()
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 80;
  display: block;
  width: 30px;
  height: 30px;
  img {
    width: 100%;
  }


/* FRONTPAGE */

#frontpage {
  width: inherit;
  height: inherit;

  /* GENERIC */

  .title {
    color: $hover;
    font-size: 1.5em;
    font-weight: bold;
  }

  .button {
    button();
    &:hover {
      button-active();
    }
  }

  input[type="text"] {
    background-color: transparent;
    border: 0px;
    border-bottom: 1px solid white;
    border-radius: 2px;
    outline: 0;
  }

  .overlay {
    position: fixed;
    z-index: 50;
    bottom: 0;
    width: 100%;
    height: 100%;
    frontpage-blur-background()

    &.anim-dropout {
      transition: height 1s ease-in, visibility 0s 1s;
      height: 0%;
      visibility: hidden;
      & > * {
        transition: opacity 0.3s 0.6s;
        opacity: 0;
      }
    }
  }

  .slide-nav {
    position: fixed;
    z-index: 40;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    & > a {
      display: block;
      margin: 5px 0px;
      width: 16px;
      height: 16px;
      border-radius: 8px;
      background-color: white;
      opacity: 0.3;
      &:hover {
        opacity: 0.6;
      }
      &.active {
        opacity: 1;
        box-shadow: 0 0 3px white;
      }
    }
  }

  .slide {
    position: relative;
    min-width: 100%;
    min-height: 100%;
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
  }

  .slide .content-block {
    margin: 0 auto;
    padding: 100px 20px;
  }



  /* SPECIFIC */

  /* buttons */

  #logo {
    position: fixed;
    z-index: 90;
    top: 20px;
    left: 20px;
    width: 150px;
    display: block;
    img { width: 100%; }
  }
  #enroll-btn {
    position: absolute;
    z-index: 60;
    bottom: 20px;
    right: 20px;
    width: 100px;
    display: block;
    &.fixed {
      position: fixed;
      top: 20px;
      bottom: auto;
    }
    &.active { /* enroll mode already active */
      visibility: hidden;
    }
  }


  /* overlay */

  #welcomeOverlay {
    div {
      position: fixed;
      top: 50%;
      width: 100%;
      transform: translateY(-50%);
      font-size: 3em;
      text-align: center;
    }
    .logo {
      position: absolute;
    }
  }


  /* slides */

  #welcome {
    background-image: url(/img/backgrounds/frontpage-intro.jpg);
    #opensource {
      position: absolute;
      top: 0px;
      right: -2px;
      display: block;
      width: 100px;
      height: 100px;
      img {
        width: 100%;
      }
    }
    .content-block {
      width: 440px;
    }
    #location-block {
      select {
        width: 100%;
        // font-size: 1.8em;
      }
    }
    #enroll-block {
      margin-top: 130px;
      #enroll-btn-large {
        display: block;
        font-size: 2.4em;
        border-width: 3px;
      }
      small {
        display: block;
        margin-top: 10px;
        font-size: 1em;
        font-style: italic;
        text-align: center;
        text-shadow()
      }
      #video-btn-small {
        width: 180px;
        padding: 10px;
        margin: 30px auto;
        text-align: center;
        display: block;
        img {
          margin: 0 auto;
          width: 35px;
        }
        span {
          margin-left: 6px;
        }
        &:hover {
          button-active()
        }
      }
    }
    #login-block {
      position: absolute;
      bottom: 0px;
      width: 100%;
      height: 70px;
      text-align: center;
      transition: height 1s;
      z-index: 45;

      .content {
        position: absolute;
        top: 50%;
        height: 70px;
        transform: translateY(-50%);
        width: 100%;
        text-align: center;
      }

      &.active {
        height: 100%;
      }

      /* blur background after sign in buttons
         after clicking enroll */
      &::after {
        position: absolute;
        z-index: -1;
        top: 0
        bottom: 0
        left: 0
        right: 0
        content: "";
        frontpage-blur-background()
        opacity: 0;
        transition: opacity 0.4s 0.9s;
      }
      &.active::after {
        opacity: 1;
        transition: opacity 0.2s 0s;
      }

      #enroll-exit { display: none; }
      &.active #enroll-exit {
        exit-button();
      }

      .sign-in-buttons,
      .sign-in-buttons a,
      .title {
        display: inline-block;
      }
      .sign-in-buttons a,
      .title {
        padding: 15px 35px 10px 35px;
        height: 70px;
        margin: 0px;
      }
      .title {
        position: relative;
        top: 5px;
      }
      .sign-in-buttons a {
        &:hover {
          button-active();
        }
      }
    }
  }

  #tools {
    background-image: url(/img/backgrounds/frontpage-tools.jpg);
    .row {
      text-align: center;
      & > div {
        padding: 50px 10px;
      }
      img {
        display: block;
        margin: 0 auto;
      }
    }
  }

  #video {
    background-image: url(/img/backgrounds/frontpage-video.jpg);

    #video-play {
      centered();
      display: block;
      width: 65%;
      img {
        width: 100%;
      }
      &:hover {
        button-active();
      }
    }

    #video-player {
      position: absolute;
      width: 100%;
      height: 100%;
      z-index: 80;
      background-color: black;
      visibility: hidden;
      opacity: 0;
    }

    #video-exit {
      exit-button();
      display: none;

    }

    /* toggle visivility */
    &.playing {
      #video-play { display: none; }
      #video-player { visibility: visible; opacity: 1; }
      #video-exit { display: block; }
    }

    /* fade animation */
    #video-player { transition: opacity 0.6s, visibility 0s 0.8s; }
    &.playing #video-player { transition: opacity 0.6s, visibility 0s 0s; }
  }

  #manifesto {
    background-image: url(/img/backgrounds/frontpage-manifesto.jpg);
    .content-block {
      width: 600px;
      padding-right: 200px;
    }
  }

  #about {
    background-image: url(/img/backgrounds/frontpage-about.jpg);
    .content-block {
      width: 400px;
    }
    #modulus-logo {
      width: 150px;
      padding: 0 5px;
    }
    #staff {
      margin-top: 40px;
      text-align: center;
      .picture-view {
        display: inline-block;
        margin-right: 12px;
        margin-bottom: 12px;
        margin-top: 8px;
        text-align: center;
      }
    }
    #to-top {
      position: fixed;
      z-index: 40;
      bottom: 20px;
      right: 20px;
      display: block;
      width: 30px;
      height: 30px;
      img {
        width: 100%;
        transform: rotate(180deg);
      }
      visibility: hidden;
      opacity: 0;
      transition: opacity 0.6s, visibility 0s 0s;
      &.visible {
        visibility: visible;
        opacity: 1;
        transition: opacity 0.6s, visibility 0s 0.8s;
      }
    }
  }
}
